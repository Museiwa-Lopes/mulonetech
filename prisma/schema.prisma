generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model admin_profile {
  id           Int     @id
  display_name String?
  role         String?
  bio          String?
  avatar_url   String?
}

model admin_users {
  id            BigInt    @id @default(autoincrement())
  email         String    @unique
  password_hash String
  role          String    @default("admin")
  is_active     Boolean   @default(true)
  last_login_at DateTime? @db.Timestamptz(6)
  created_at    DateTime  @default(now()) @db.Timestamptz(6)
  updated_at    DateTime  @default(now()) @db.Timestamptz(6)
}

model app_settings {
  key        String   @id
  value      Json     @default("{}")
  updated_at DateTime @default(now()) @db.Timestamptz(6)
}

model contact_section {
  id          Int      @id
  eyebrow     String?
  title       String?
  description String?
  badges      String[] @default([])
}

model hero_content {
  id                  Int     @id
  badge               String?
  title               String?
  subtitle            String?
  cta_primary_label   String?
  cta_primary_href    String?
  cta_secondary_label String?
  cta_secondary_href  String?
}

model hero_stats {
  id         Int     @id
  value      String?
  label      String?
  sort_order Int     @default(0)
}

model messages {
  id         BigInt   @id @default(autoincrement())
  name       String
  email      String
  subject    String?
  message    String
  status     String?  @default("pendente")
  reply      String?
  created_at DateTime @default(now()) @db.Timestamptz(6)

  @@index([created_at(sort: Desc)], map: "idx_messages_created_at")
  @@index([status], map: "idx_messages_status")
}

model projects {
  id          Int     @id
  title       String?
  tag         String?
  description String?
  sort_order  Int     @default(0)
}

model projects_section {
  id          Int     @id
  eyebrow     String?
  title       String?
  description String?
}

model services {
  id          Int     @id
  icon        String?
  title       String?
  image_url   String?
  description String?
  sort_order  Int     @default(0)
}

model services_section {
  id          Int     @id
  eyebrow     String?
  title       String?
  description String?
}

model testimonials {
  id         Int     @id
  name       String?
  role       String?
  quote      String?
  sort_order Int     @default(0)
}

model testimonials_section {
  id          Int     @id
  eyebrow     String?
  title       String?
  description String?
}
